<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Maui.MVVM.Pages.ContactEditPage"
             
             xmlns:viewmodel="clr-namespace:UI.Maui.MVVM.ViewModels"
             x:DataType="{x:Type viewmodel:ContactEditPageViewModel}"
             
             Title="ContactEditPage">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>


    <ScrollView>
        <Grid RowDefinitions="auto, auto" Padding="20" >

            <!-- Input Group-->
            <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0, 30, 0, 0" >
                <VerticalStackLayout>
                    <Label Text="First Name" />
                    <Entry Text="{Binding ContactForm.FirstName}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Last Name" />
                    <Entry VerticalOptions="Center" Text="{Binding ContactForm.LastName}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Email" />
                    <Entry VerticalOptions="Center" Text="{Binding ContactForm.Email}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Phonenumber" />
                    <Entry VerticalOptions="Center" Text="{Binding ContactForm.PhoneNumber}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Address" />
                    <Entry VerticalOptions="Center" Text="{Binding ContactForm.PostalCode}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Postal Code" />
                    <Entry VerticalOptions="Center" Text="{Binding ContactForm.Address}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="City" />
                    <Entry VerticalOptions="Center" Text="{Binding ContactForm.City}"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" Spacing="50">
                <Button  Text="Save"  WidthRequest="150" BackgroundColor="DarkOliveGreen" />
                <Button  Text="Cancel"  WidthRequest="150" x:Name="btnCancel" Clicked="btnCancel_Clicked" BackgroundColor="Firebrick" />
            </HorizontalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>