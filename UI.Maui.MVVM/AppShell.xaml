<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UI.Maui.MVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UI.Maui.MVVM"
    xmlns:pages="clr-namespace:UI.Maui.MVVM.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="Dial Hard">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="Home" />

    <ShellContent
        Title="Add Contact"
        ContentTemplate="{DataTemplate pages:ContactAddPage}"
        Route="AddContact" />

</Shell>
