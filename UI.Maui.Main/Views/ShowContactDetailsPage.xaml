<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Maui.Main.Views.ShowContactDetailsPage"
             Title="ShowContactDetailsPage">
    <VerticalStackLayout Padding="10" Spacing="20">
        <HorizontalStackLayout>
            <Button x:Name="btnBack" Text="Go Back" Clicked="btnBack_Clicked" />
            <Button x:Name="btnEdit" Text="Edit Contact" Clicked="btnEdit_Clicked" />
            <Button x:Name="btnRemove" Text="Remove Contact" Clicked="btnRemove_Clicked" />
        </HorizontalStackLayout>
        <Label 
        x:Name="viewName"
        Text="..." />
        <Label 
        x:Name="viewEmail"
        Text="..." />
        <Label 
        x:Name="viewPhone"
        Text="..." />
        <Label 
        x:Name="viewAdress"
        Text="..." />
        <Label 
        x:Name="viewPostal"
        Text="..." />
        <Label 
        x:Name="viewCity"
        Text="..." />
    </VerticalStackLayout>
</ContentPage>