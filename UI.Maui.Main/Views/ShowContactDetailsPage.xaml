<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Maui.Main.Views.ShowContactDetailsPage"
             Title="ShowContactDetailsPage">
    <VerticalStackLayout Padding="10" Spacing="20">
        <HorizontalStackLayout>
            <Button x:Name="BtnBack" Text="Go Back" Clicked="btnBack_Clicked" />
            <Button x:Name="BtnEdit" Text="Edit Contact" Clicked="btnEdit_Clicked" />
            <Button x:Name="BtnRemove" Text="Remove Contact" Clicked="btnRemove_Clicked" />
        </HorizontalStackLayout>
        <Label 
        x:Name="ViewName"
        Text="..." />
        <Label 
        x:Name="ViewEmail"
        Text="..." />
        <Label 
        x:Name="ViewPhone"
        Text="..." />
        <Label 
        x:Name="ViewAddress"
        Text="..." />
        <Label 
        x:Name="ViewPostal"
        Text="..." />
        <Label 
        x:Name="ViewCity"
        Text="..." />
    </VerticalStackLayout>
</ContentPage>